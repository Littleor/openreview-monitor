# Admin password
ADMIN_PASSWORD=your_admin_password

# Database
DATABASE_URL=sqlite:///./openreview_monitor.db

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=your_email@gmail.com

# Check interval (minutes)
CHECK_INTERVAL=30

# CORS (comma-separated). Use * to allow all origins (not recommended for production).
# Example: CORS_ALLOW_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-frontend.com
CORS_ALLOW_ORIGINS=*
