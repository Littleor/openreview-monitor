# Admin password
ADMIN_PASSWORD=your_admin_password

# Database
DATABASE_URL=sqlite:///./openreview_monitor.db
# Optional: if DATABASE_URL is not set, DB_PATH can be used to point at a SQLite file.
# DB_PATH=./openreview_monitor.db

# Server binding
APP_HOST=0.0.0.0
APP_PORT=8000

# JWT / Admin auth
# Generate a strong secret for production, for example:
#   python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-me
# Optional: separate encryption key for stored secrets (falls back to SECRET_KEY if empty)
# ENCRYPTION_KEY=change-me-too

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=your_email@gmail.com
FROM_NAME=OpenReview Monitor

# Check interval (minutes)
CHECK_INTERVAL=30

# CORS (comma-separated). Use * to allow all origins (not recommended for production).
# Example: CORS_ALLOW_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-frontend.com
CORS_ALLOW_ORIGINS=*
